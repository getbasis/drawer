bs-drawer-width            ?= (bs-base-line-height * 10);
bs-drawer-max-width        ?= 80%;
bs-drawer-background-color ?= bs-light(bs-color-black);
bs-drawer-z-index          ?= 10;

[data-c="drawer-btn"] {
  position: relative;
  z-index: (bs-drawer-z-index + 1);
}

[data-c="drawer"] {
  position: relative;
}

[data-c="drawer__body"] {
  position: absolute;
  z-index: bs-drawer-z-index;
  top: 0;
  left: -100%;
  bottom: 0;
  transition: left bs-transition-duration bs-transition-function-timing;
  width: bs-drawer-width;
  max-width: bs-drawer-max-width;
  background-color: bs-drawer-background-color;
  overflow-y: auto;

  &[aria-hidden="false"] {
    left: 0;
  }
}

[data-c="drawer__submenu"] {
  height: 0;
  overflow: hidden;

  &[aria-hidden="false"] {
    height: auto;
    overflow: visible;
  }
}

[data-c="drawer__toggle"] {
  cursor: pointer;
}

.{bs-prefix}c-drawer {
  &__body {
    &--fixed {
      position: fixed;
    }
  }
}
